
<div class="modal @modalClass" role="dialog" style="display:@modalDisplay; overflow-y: auto;">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title">@ModalTitle</h5>
                <button type="button" class="close btn btn-outline-secondary" data-dismiss="modal" aria-label="Close" @onclick="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            @if (ModalBody != null)
            {
                <div class="modal-body">
                    @ModalBody
            </div>
            }
            @if (ModalFooter != null)
            {
                <div class="modal-footer">
                    @ModalFooter
                </div>
            }
        </div>
    </div>
</div>

@if (showBackdrop)
{
    <div class="modal-backdrop fade show"></div>
}

@code {
    [Parameter]
    public RenderFragment ModalTitle { get; set; }

    [Parameter]
    public RenderFragment? ModalBody { get; set; } = null;

    [Parameter]
    public RenderFragment? ModalFooter { get; set; } = null;

    private string modalDisplay = "none;";
    private string modalClass = "";
    private bool showBackdrop = false;

    public void Open()
    {
        modalDisplay = "block;";
        modalClass = "show";
        showBackdrop = true;
    }

    public void Close()
    {
        modalDisplay = "none";
        modalClass = "";
        showBackdrop = false;
    }
}
@page "/"
@inject NavigationManager navigator
<style>
    .disp-legends {
        width: 100%;
        height: 200px;
        margin: 10px;
        text-align: center;
    }

        .disp-legends > img {
            width: inherit;
            height: inherit;
            padding-bottom: 35px;
            margin-bottom: -35px;
            opacity:0.4;
        }
</style>
<div class="row">
    <div class="col-xxl-4 col-xl-4 col-lg-4 col-md-4 col-sm-4 col-4">
        <button @onclick='()=>navigator.NavigateTo("/customers")' class="btn btn-info disp-legends">
            <img src="_content/SavuDiary.UI.Common/imgs/people.png" />
            <span>Customers</span>
        </button>
    </div>
    <div class="col-xxl-4 col-xl-4 col-lg-4 col-md-4 col-sm-4 col-4">
        <button @onclick='()=>navigator.NavigateTo("/products")' class="btn btn-info disp-legends">
            <img src="_content/SavuDiary.UI.Common/imgs/shopping-cart.png" />
            <span>Products</span>
        </button>
    </div>
    <div class="col-xxl-4 col-xl-4 col-lg-4 col-md-4 col-sm-4 col-4">
        <button @onclick='()=>navigator.NavigateTo("/sales")' class="btn btn-info disp-legends">
            <img src="_content/SavuDiary.UI.Common/imgs/wallets.png" />
            <span>Sales</span>
        </button>
    </div>
    <div class="col-xxl-4 col-xl-4 col-lg-4 col-md-4 col-sm-4 col-4">
        <button @onclick='()=>navigator.NavigateTo("/customers")' class="btn btn-info disp-legends">
            <img src="_content/SavuDiary.UI.Common/imgs/delivery-guy.png" />
            <span>Sale By Sequences</span>
        </button>
    </div>
    <div class="col-xxl-4 col-xl-4 col-lg-4 col-md-4 col-sm-4 col-4">
        <button @onclick='()=>navigator.NavigateTo("/purchases")' class="btn btn-info disp-legends">
            <img src="_content/SavuDiary.UI.Common/imgs/money.png" />
            <span>Purchases</span>
        </button>
    </div>
</div>
@code{
    protected override Task OnInitializedAsync()
    {
        return base.OnInitializedAsync();
    }
}
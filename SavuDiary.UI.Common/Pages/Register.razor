@page "/register"

@using SavuDiary.Shared
<h3>Register</h3>
<EditForm Model="@registerUsers" OnValidSubmit="@RegisterValidSubmit">
    <DataAnnotationsValidator></DataAnnotationsValidator>
    <div class="row">
        
        <button class="btn btn-primary" type="submit"> Submit</button>
    </div>
    <div class="form-group">
        <label for="FirstName">
            First Name
        </label>
        <InputText id="FirstName" class="form-control" placeholder="First Name"
                   @bind-Value="registerUsers.FirstName" />
        <ValidationMessage For="() => registerUsers.FirstName" />
    </div>
    <div class="form-group">
        <label for="LastName">
            Last Name
        </label>
        <InputText id="LastName" class="form-control" placeholder="LastName"
                   @bind-Value="registerUsers.LastName" />
        <ValidationMessage For="() => registerUsers.LastName" />
    </div>
    <div class="form-group">
        <label for="UserName">
            Last Name
        </label>
        <InputText id="UserName" class="form-control" placeholder="UserName"
                   @bind-Value="registerUsers.UserName" />
        <ValidationMessage For="() => registerUsers.UserName" />
    </div>
    <div class="form-group">
        <label for="Email">
           Email
        </label>
        <InputText id="Email" class="form-control" placeholder="Email"
                   @bind-Value="registerUsers.Email" />
        <ValidationMessage For="() => registerUsers.Email" />
    </div>
     <div class="form-group">
        <label for="MobileNo">
           MobileNo
        </label>
        <InputText id="MobileNo" class="form-control" placeholder="MobileNo"
                   @bind-Value="registerUsers.MobileNo" />
        <ValidationMessage For="() => registerUsers.MobileNo" />
    </div>
</EditForm>
@code {
    public RegisterUsers registerUsers { get; set; } = new RegisterUsers();
    public void RegisterValidSubmit()
    {

    }
}

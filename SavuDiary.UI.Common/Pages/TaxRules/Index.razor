@page "/taxrules"
@inject IDataServices<TaxRuleModel> dataServices
@inject NavigationManager navigator

<div class="card">
    <div class="card-header">
        <div class="col-12">
            Purchases >>
            <a href="purchases/create" type="button" class="btn btn-primary">
                Create
            </a>
        </div>
    </div>
    <div class="card-body">
        <div class="list-group">



            @foreach (var item in ListOfTaxRules.OrderBy(x => x.TaxRule.TaxPercentage))
            {
                var Links = $"taxrules/edit/{item.Id}";
                <NavLink href="@($"taxrules/edit/{item.Id}")"
                     class="list-group-item list-group-item-action"
                     aria-current="true">
                    <div class="d-flex w-100 justify-content-between">
                        <h6 class="mb-3">Name .: @item.TaxRule.TaxPercentage</h6>
                       
                    </div>
                    <p class="mb-3">
                       Descriptions:  @item.TaxRule.Descriptions
                    </p>
                    
                </NavLink>
            }
        </div>
    </div>
</div>

@code {
    private List<TaxRuleModel> ListOfTaxRules { get; set; } = new List<TaxRuleModel>();
    protected override async Task OnInitializedAsync()
    {
        var list = await dataServices.GetAll();
        if (list.Result != null)
        {
            ListOfTaxRules = list.Result.ToList();
        }
    }
}
